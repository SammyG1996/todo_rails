<p style="color: green"><%= notice %></p>

<% content_for :title, "Lists" %>



<div id="lists">
  <% @lists.each do |list| %>
    <% if list.completed %>
      <div class="card ">
        <div class="card-body bg-secondary text-decoration-line-through">
          <p>
            <%= link_to list.description, list, class: "text-dark link-dark" %>
          </p>
          <div class="d-flex">
            <%= button_to "✓", home_check_marker_path, method: :put,  params: { id: list.id },class: "btn btn-primary text-white link-light" %>
            <%= button_to "Delete", list , method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger text-white link-light mx-3" %>
          </div>
        </div>
    </div>
    <% else %>
      <div class="card my-3">
        <div class="card-body">
          <p>
            <%= link_to list.description, list, class: "text-dark link-dark" %>
          </p>
          <div class="d-flex">
            <%= button_to "✓", home_check_marker_path, method: :put,  params: { id: list.id },class: "btn btn-primary text-white link-light" %>
            <%= button_to "Delete", list , method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger text-white link-light mx-3" %>
          </div>


        </div>
      </div>
    <% end %>
  <% end %>
  <div class="d-flex">
    <%= button_to "Delete marked to do's", home_trash_em_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mt-3" %>
    <%= button_to "Delete all to do's", home_trash_em_all_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mx-3 mt-3" %>
  </div>

</div>
